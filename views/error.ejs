<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="alert alert-danger" role="alert" style="word-wrap: break-word;">
                <h4 class="alert-heading">
                    <%=error.status %> error
                </h4>
                <p><%=error.message %></p>
                <hr>
                <p class="mb-0">
                    <%=error.stack %>
                </p>
            </div>
        </div>
    </div>